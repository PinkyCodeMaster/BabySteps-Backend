# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/debt_snowball_dev

# Better Auth Configuration
BETTER_AUTH_SECRET=your-secret-key-change-in-production
BETTER_AUTH_URL=http://localhost:9000

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:9000

# Server Configuration
PORT=9000
NODE_ENV=development

# Logging Configuration
# Options: trace, debug, info, warn, error, fatal, silent
# Default: debug (development), info (staging), warn (production), silent (test)
LOG_LEVEL=debug

# Optional: Sentry Error Tracking
# Uncomment and set your Sentry DSN to enable error tracking
# Get your DSN from: https://sentry.io/settings/projects/
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_RELEASE=1.0.0

# Optional: Redis for Caching and Jobs
# REDIS_URL=redis://localhost:6379
