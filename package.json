{
  "name": "debt-snowball-api",
  "version": "1.0.0",
  "description": "Debt Snowball API - A backend system for managing family finances using the debt snowball method",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "build": "bun build src/server.ts --outdir ./dist --target bun",
    "start": "bun run dist/server.js",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:push:test": "bun run scripts/db-push-test.ts",
    "db:verify": "bun run scripts/verify-schema.ts",
    "auth:generate": "npx @better-auth/cli generate --config ./src/lib/auth.ts --output ./src/db/schema/users.ts -y",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:setup": "bun run db:push:test",
    "deploy:staging": "git push origin staging",
    "deploy:production": "git push origin main",
    "smoke:staging": "bash scripts/smoke-tests.sh staging",
    "smoke:production": "bash scripts/smoke-tests.sh production",
    "setup:env": "bash scripts/setup-environment.sh"
  },
  "keywords": [
    "debt-snowball",
    "finance",
    "api",
    "bun",
    "hono",
    "drizzle"
  ],
  "author": "Scott Jones",
  "license": "MIT",
  "dependencies": {
    "@hono/zod-openapi": "^1.1.5",
    "@neondatabase/serverless": "^1.0.2",
    "@scalar/hono-api-reference": "^0.9.25",
    "@sentry/bun": "^10.28.0",
    "better-auth": "^1.4.4",
    "decimal.js": "^10.6.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.7",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "fast-check": "^4.3.0",
    "hono": "^4.10.7",
    "ioredis": "^5.8.2",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/ioredis": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "tsx": "^4.21.0"
  }
}
